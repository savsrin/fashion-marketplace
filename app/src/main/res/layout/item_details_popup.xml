<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvItemDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/allerta"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:text="Black Miniskirt" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/ivItemDetails"
        android:layout_below="@id/tvItemDetailsTitle"
        />

    <TextView
        android:id="@+id/tvSellerSizingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvbrandItemDetails"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/allerta"
        android:text="Seller's Measurements"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvbrandItemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivItemDetails"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/allerta"
        android:textAlignment="center"
        tools:text="Brand: Francesca's" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSellerSizingTitle"
        android:id="@+id/tvSellerMeasurements"
        android:fontFamily="@font/allerta"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:text="Height: 65'', Weight: 140 lb, Chest: 25'', Waist:34'', Hips: 39''" />


    <TextView
        android:id="@+id/tvBuyerSizingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSellerMeasurements"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/allerta"
        android:text="Your Measurements"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBuyerMeasurements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBuyerSizingTitle"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/allerta"
        android:textAlignment="viewStart"
        tools:text="Height: 65'', Weight: 140 lb, Chest: 25'', Waist:34'', Hips: 39''" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBuyerMeasurements"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/allerta" />
</RelativeLayout>