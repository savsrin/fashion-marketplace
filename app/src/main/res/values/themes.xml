<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">@color/light_yellow</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tea_green</item>
        <item name="colorPrimaryVariant">@color/tea_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_salmon</item>
        <item name="colorSecondaryVariant">@color/dark_salmon</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/medium_carmine</item>
        <item name="actionMenuTextAppearance">@style/CustomActionBarMenu</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dark_salmon</item>
        <!-- Support library compatibility -->
        <item name="background">@color/dark_salmon</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CustomActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/architects_daughter</item>
    </style>

    <style name="CustomActionBarMenu">
        <item name="android:textSize">23sp</item>
    </style>

</resources>